# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Builds the iOS app and exports IPA"
  lane :build_app do
    gym(                      
      workspace: "FastlaneJenkinsTest.xcworkspace",
      scheme: "FastlaneJenkinsTest",
      configuration: "Release",
      clean: true,
      export_method: "app-store",
      output_directory: "/Users/ft42/Documents/Demo Projects",  # ✅ Ensure this path is correct
      output_name: "FastlaneJenkinsTest.ipa"  # ✅ The expected IPA filename
    )
  end
end

